<Window x:Class="AssignmentWFP.ViewControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AssignmentWFP"
        mc:Ignorable="d"
        Title="ViewControl" Height="200" Width="800"
        Loaded="ViewControl_OnLoaded"
        Closing="ViewControl_OnClosing">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="BtnNews" Content="News Article" Width="100" Height="50" Margin="0,10,0,0" Click="BtnNews_OnClick"/>
            <Button x:Name="BtnAccountView" Content="Accounts" Width="100" Height="50" Margin="20,10,0,0"/>
            <Button x:Name="BtnProfile" Content="Profile" Width="100" Height="50" Margin="20,10,0,0"/>
            <Button x:Name="BtnLogout" Content="Logout" Width="100" Height="50" Margin="20,10,0,0" Click="BtnLogout_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
