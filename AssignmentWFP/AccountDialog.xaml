<Window x:Class="AssignmentWFP.AccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AssignmentWFP"
        mc:Ignorable="d"
        Title="Account" Height="400" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Id" FontSize="16px"/>
            <TextBox x:Name="TxtId" FontSize="16px" Margin="0,5"/>
            
            <Label Content="UserName" FontSize="16px"/>
            <TextBox x:Name="TxtUsername" FontSize="16px" Margin="0,5"/>
            
            <Label Content="Email" FontSize="16px"/>
            <TextBox x:Name="TxtEmail" FontSize="16px" Margin="0,5"/>
            
            <Label Content="Password" FontSize="16px"/>
            <TextBox x:Name="TxtPassword" FontSize="16px" Margin="0,5"/>
            
            <Label Content="Role" FontSize="16px"/>
            <ComboBox x:Name="CbRole" FontSize="16px" Margin="0,5"/>

            <Button Content="Save" FontSize="16px" Margin="0,10,0,0" Width="100" HorizontalAlignment="Right" Click="BtnSave_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
