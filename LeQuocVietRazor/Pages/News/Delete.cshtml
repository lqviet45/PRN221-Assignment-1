@page
@model LeQuocVietRazor.Pages.News.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var role = HttpContext.Session.GetString("Role");
    
    if (role == null)
    {
        Response.Redirect("/user/Login");
    }
    else if (int.Parse(role) != 1)
    {
        Response.Redirect("/news/Index");
    }
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>NewsArticle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.NewsTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.NewsTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.NewsContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.NewsContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.NewsStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.NewsStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.ModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.ModifiedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.Category.CategoryDesciption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsArticle.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.CreatedBy.AccountId)
        </dd>
    </dl>
    
    <form method="post" onsubmit="return confirmDelete();">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="NewsArticle.NewsArticleId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
@section Scripts {
    <script type="text/javascript">
        function confirmDelete() {
            return confirm('Are you sure you want to delete this article?');
        }
    </script>
}