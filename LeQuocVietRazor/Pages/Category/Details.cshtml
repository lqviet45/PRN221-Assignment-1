@page
@model LeQuocVietRazor.Pages.Category.DetailsModel

@{
    ViewData["Title"] = "Details";
    var role = HttpContext.Session.GetString("Role");
    
    if (role == null)
    {
        Response.Redirect("/user/Login");
    }
    else if (int.Parse(role) != 1)
    {
        Response.Redirect("/news/Index");
    }
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryDesciption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryDesciption)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.CategoryId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
